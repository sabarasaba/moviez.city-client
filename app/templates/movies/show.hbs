<div class="movie_container">
  <div class="movie">
    <div class="movie__backdrop" style="background-image: url(https://image.tmdb.org/t/p/w1000{{ model.backdrop_path }})">
      <a class="swipebox" href="{{model.trailer}}">
        <div class="movie__backdrop__play"></div>
      </a>
    </div>
    <div class="movie__content">
      <div class="movie__data">
        <div class="movie__details">
            <a class="swipebox" href="http://image.tmdb.org/t/p/w780{{model.poster_path}}" title="{{ model.title }}">
              <img class="movie__poster" src="http://image.tmdb.org/t/p/w185{{model.poster_path}}" alt="{{model.title}}">
            </a>

            <div class="movie__details__description">
              <h1>{{ model.title }}</h1>
              <h3>{{formatted-date model.release_date 'LL'}}</h3>
              <p>{{ model.plot }}</p>
            </div>
        </div>
        <div class="movie__downloads">
          <a href="{{model.download.magnet}}" {{ action 'download' model.download.magnet}}>
            <div class="download-btns">
              <span class="download-text"><i class="fa fa-magnet">&nbsp;&nbsp;</i>Download</span>
            </div>
          </a>
        </div>
      </div>
      <div class="movie__actors">

      </div>
    </div>
  </div>
</div>
